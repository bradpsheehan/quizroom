  %p.selected_answer
  = form_tag "", id:"answer"

  = render 'student_web_socket'

  %script.template{type: "text/x-handlebars-template"}
    .field
      %label{for: "answer_id"}
        %input{id: "answer_id", name: "answer", type:"radio", value:"{{id}}"}
        %span.text {{text}}
