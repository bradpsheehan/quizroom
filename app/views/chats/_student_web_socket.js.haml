= javascript_include_tag "http://localhost:9292/faye.js"

:javascript
  $(document).ready( function() {
    var faye = new Faye.Client('http://localhost:9292/faye');

    var channel = $('#chat').data("channel");
    faye.subscribe("/#{@chat.public_channel}", function(data) {
      console.log(data);
      $("#chat").append("<li>Question: "+data.message+"</li>");
    });

    $("form").on("submit", function() {

      var publishChannel = $("#publish_channel").val();

      faye.publish("/#{@chat.teacher_channel}", {
        message: $("#message").val(),
        student: "#{current_user.first_name} #{current_user.last_name}"

      });
      $("form")[0].reset();
    });
  });
